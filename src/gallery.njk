---
layout: layout.njk
title: Galerio
permalink: /galeria/
---

<header class="page-header">
    <h1>Galerio</h1>
    <p class="subtitle">Foliumi fotojn per lenso</p>
</header>

<main class="main-content">
    <div class="gallery-controls">
        <label for="folder-select">Elektu lenson:</label>
        <select id="folder-select" class="folder-select">
            <option value="all">Ĉiuj lensoj</option>
            {% for folder in collections.imageFolders %}
            <option value="{{ folder }}">{{ folder }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="gallery-grid" id="gallery-grid">
        {% set groupedImages = collections.allImages | groupByLens %}
        
        <!-- Domyślnie pokazuj wszystkie zdjęcia -->
        {% for lensName, images in groupedImages %}
            {% for image in images %}
            <div class="gallery-item" data-lens="{{ lensName }}">
                <img src="{{ image.path }}" alt="{{ lensName }} - {{ image.filename }}" loading="lazy">
                <div class="image-info">
                    <span class="lens-name">{{ lensName }}</span>
                    <span class="file-title">{{ image.filename }}</span>
                </div>
            </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>